<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortner</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
  <div class="container">
    <h1 class="d-flex justify-content-center my-3">URL Shortner</h1>
    <form action="/shortUrl" method="post" class="my-4">
      <div class="d-flex justify-content-center">
        <input type="url" required name="fullUrl" id="fullUrl" class=" bd-highlight mb-3 mx-3 col form-control"
  placeholder="Enter your URL here">
        <button type="submit" class="btn btn-primary">Shorten the URL</button>
      
      </div>
      
    </form>
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
        <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.fullUrl %> "><%= shortUrl.fullUrl %></a></td>
            <td><a target="_blank" href="<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a></td>
            <td><%= shortUrl.clicks %></td>
            <td>
              <form action="/remove/<%= shortUrl._id %>" method="post">
                <button class="btn btn-danger">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %> 
        
      </tbody>
    </table>
  </div>
</body>
</html>